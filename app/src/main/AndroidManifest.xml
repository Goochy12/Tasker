<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="au.com.liamgooch.tasker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="au.com.liamgooch.tasker.Activities.StartActivity"
            android:theme="@style/SplashStyle"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="au.com.liamgooch.tasker.Activities.Login"
            tools:ignore="InnerclassSeparator" />
        <activity android:name="au.com.liamgooch.tasker.Activities.AddTaskActivity"
            tools:ignore="ExtraText,InnerclassSeparator"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="au.com.liamgooch.tasker.Activities.EditTaskActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name="au.com.liamgooch.tasker.Activities.CreateAccount"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="au.com.liamgooch.tasker.Activities.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>